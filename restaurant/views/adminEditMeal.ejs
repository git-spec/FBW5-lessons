        // sending data by fetch (Vanilla JS)
        function postData(url = '', data = {}) {
            // default options are marked with *
            return fetch(url, {
                method: 'POST', // *GET. POST, PUT, DELETE ect. 
                mode: 'cors',   // no-cors, cors, *same-origin
                cache: 'no-cache',  // *default, no-cache, reload, force-cache, only-if-cached
                credentials: 'same-origin', // include, *same-origin, omit
                headers: {
                    'Content-Type': 'application/json'                   // express.urlencoded({extended: false})
                    // 'Content-Type': 'application/x-www-form-urlencoded'     // if 'express.urlencoded({extended: true})'
                },
                redirect: 'follow',
                referrerPolicy: 'no-referrer',  // no-referrer, 
                body: JSON.stringify(data)  // body data type must match 'Content-Type'
            }).then(response => {
                // console.log(response.json());   // parses JSON response into native JS objects
                response
            })
        }
        // send data as formdata using fetch
        function postData_formData(url = '', formdata = {}) {
            // default options are marked with *
            return fetch(url, {
                method: 'POST', // *GET. POST, PUT, DELETE ect. 
                body: formdata  // body data type must match 'Content-Type'
            }).then(response => {
                // console.log(response.json());   // parses JSON response into native JS objects
                return response         // or 'response => response'
            })
        }
